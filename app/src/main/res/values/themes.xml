<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodApp" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary branding color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryContainer">@color/white</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary branding color. (Progress bar color)-->
    <item name="colorSecondary">@color/navy</item>
    <item name="colorSecondaryContainer">@color/white</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Background color. -->
    <item name="android:colorBackground">@color/white</item>

    <!-- Surface color. -->
    <item name="colorSurface">@color/white</item>
    <item name="colorOnSurface">@color/white</item>

    <!-- Error color. -->
    <item name="colorError">@color/white</item>
    <item name="colorOnError">@color/white</item>
</style>

    <style name="Theme.FoodApp" parent="Base.Theme.FoodApp" />
</resources>